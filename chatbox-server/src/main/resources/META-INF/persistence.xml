<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="chatbox" transaction-type="JTA">
        <jta-data-source>${jpa.datasource}</jta-data-source>

        <class>at.rueckgr.chatbox.database.model.InvisibleUsers</class>
        <class>at.rueckgr.chatbox.database.model.OnlineUser</class>
        <class>at.rueckgr.chatbox.database.model.Settings</class>
        <class>at.rueckgr.chatbox.database.model.ShoutRevision</class>
        <class>at.rueckgr.chatbox.database.model.ShoutSmileys</class>
        <class>at.rueckgr.chatbox.database.model.ShoutWords</class>
        <class>at.rueckgr.chatbox.database.model.Shout</class>
        <class>at.rueckgr.chatbox.database.model.Smiley</class>
        <class>at.rueckgr.chatbox.database.model.UserCategory</class>
        <class>at.rueckgr.chatbox.database.model.UserCredential</class>
        <class>at.rueckgr.chatbox.database.model.User</class>
        <class>at.rueckgr.chatbox.database.model.Word</class>
    </persistence-unit>
</persistence>
